{% extends "::base.html.twig" %}

{% block title %}Blog{% endblock %}

{% block content %}

    {% if isAuth == true %}
        Hello {{ user }}
    {% else %}
        Hello world!
    {% endif %}

    {% for posts in post %}
        <div class="blog-post">
            <h2 class="blog-post-title"><a href="">{{ posts.title }}</a></h2>
            <p class="blog-post-meta">{{ posts.createdAt|localizeddate("medium", "none", null, null, "cccc d LLLL yyyy") }} in <a href="">{{ posts.category.title }}</a> by <a href="">{{ posts.userId }}</a></p>
            {{ posts.post|raw|truncate(300) }}
        </div>
    {% endfor %}


    <nav>
        <ul class="pager">
            <li><a href="#">Previous</a></li>
            <li><a href="#">Next</a></li>
        </ul>
    </nav>

{% endblock %}