{% extends "::base.html.twig" %}

{% block title %}{{ configuration.configuration_blog.name }}{% endblock %}
{% block blog_title %}{{ configuration.configuration_blog.name }}{% endblock %}
{% block blog_description %}{{ configuration.configuration_blog.description }}{% endblock %}


{% block content %}
    <h2>Category edit</h2>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.title) }}
        {{ form_widget(edit_form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.description) }}
        {{ form_widget(edit_form.description, {'attr': {'class': 'form-control', 'rows': 30}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.image) }}
        {{ form_widget(edit_form.image) }}
    </div>

    <input type="submit" value="Edit" class="btn btn-success btn-block" />
    {{ form_end(edit_form) }}


    <a href="{{ path('admin_category_index') }}" class="btn btn-default btn-block">Back to the list</a>

    {{ form_start(delete_form) }}
        <input type="submit" value="Delete"  class="btn btn-danger btn-block">
    {{ form_end(delete_form) }}

{% endblock %}

{% block about %}{{ configuration.configuration_blog.about|truncate(140) }}{% endblock %}

