{% extends "::base.html.twig" %}

{% block title %}{{ configuration.configuration_blog.name }}{% endblock %}
{% block blog_title %}{{ configuration.configuration_blog.name }}{% endblock %}
{% block blog_description %}{{ configuration.configuration_blog.description }}{% endblock %}


{% block content %}
    <h2>Configuration list</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>About</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configuration in configurations %}
            <tr>
                <td><a href="{{ path('admin_configuration_show', { 'id': configuration.id }) }}">{{ configuration.id }}</a></td>
                <td>{{ configuration.name }}</td>
                <td>{{ configuration.description }}</td>
                <td>{{ configuration.about }}</td>
                <td>
                    <a href="{{ path('admin_configuration_show', { 'id': configuration.id }) }}" class="btn btn-default btn-block">show</a>
                    <a href="{{ path('admin_configuration_edit', { 'id': configuration.id }) }}" class="btn btn-primary btn-block">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_configuration_new') }}" class="btn btn-success btn-lg btn-block">Create a new entry</a>

{% endblock %}

{% block about %}{{ configuration.configuration_blog.about|truncate(140) }}{% endblock %}
